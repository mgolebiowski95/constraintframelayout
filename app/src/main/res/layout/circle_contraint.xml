<?xml version="1.0" encoding="utf-8"?>
<com.mgsoftware.constraintframelayout.widget.ConstraintFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/a"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/red_500" />

    <View
        android:id="@+id/b"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/blue_500"
        app:ConstraintFrameLayout_layout_constraintCircle="@id/a"
        app:ConstraintFrameLayout_layout_constraintCircleAngle="30"
        app:ConstraintFrameLayout_layout_constraintCircleRadius="50dp" />

    <View
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/red_500"
        app:ConstraintFrameLayout_layout_constraintCenter_toCenterOf="@id/b"
        app:ConstraintFrameLayout_layout_constraintHorizontal_bias="0.5"
        app:ConstraintFrameLayout_layout_constraintVertical_bias="0.5" />

    <View
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha="0.1"
        android:background="@drawable/circle"
        android:backgroundTint="@color/pink_500" />

</com.mgsoftware.constraintframelayout.widget.ConstraintFrameLayout>