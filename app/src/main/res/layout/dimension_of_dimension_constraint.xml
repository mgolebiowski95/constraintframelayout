<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.mgsoftware.constraintframelayout.widget.ConstraintFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#22000000"
            android:text="@string/app_name" />

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:background="@color/red_500"
            app:ConstraintFrameLayout_layout_constraintHorizontal_bias="0"
            app:ConstraintFrameLayout_layout_constraintVertical_bias="0"
            app:ConstraintFrameLayout_measure_constraintWidth_toWidthOf="@id/a" />

        <View
            android:layout_width="10dp"
            android:layout_height="0dp"
            android:background="@color/green_500"
            app:ConstraintFrameLayout_layout_constraintHorizontal_bias="1"
            app:ConstraintFrameLayout_layout_constraintVertical_bias="0"
            app:ConstraintFrameLayout_measure_constraintHeight_toHeightOf="@id/a" />

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:background="@color/blue_500"
            app:ConstraintFrameLayout_layout_constraintHorizontal_bias="1"
            app:ConstraintFrameLayout_layout_constraintVertical_bias="1"
            app:ConstraintFrameLayout_measure_constraintWidth_toHeightOf="@id/a" />

        <View
            android:layout_width="10dp"
            android:layout_height="0dp"
            android:background="@color/yellow_500"
            app:ConstraintFrameLayout_layout_constraintHorizontal_bias="0"
            app:ConstraintFrameLayout_layout_constraintVertical_bias="1"
            app:ConstraintFrameLayout_measure_constraintHeight_toWidthOf="@id/a" />

    </com.mgsoftware.constraintframelayout.widget.ConstraintFrameLayout>

</layout>