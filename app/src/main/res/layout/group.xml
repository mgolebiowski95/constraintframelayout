<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.mgsoftware.constraintframelayout.widget.ConstraintFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mgsoftware.constraintframelayout.helper.widget.Group
            android:id="@+id/g1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:ConstraintFrameLayout_layout_constraintHorizontal_bias="0.5"
            app:ConstraintFrameLayout_layout_constraintVertical_bias="0.25"
            app:referenceIds="a,b" />

        <View
            android:id="@+id/a"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/blue_500"
            app:ConstraintFrameLayout_measure_constraintWidth_percent="1" />

        <View
            android:id="@+id/b"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:background="@color/green_500"
            app:ConstraintFrameLayout_measure_constraintHeight_percent="1" />

        <View
            android:id="@+id/d"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/teal_500"
            app:ConstraintFrameLayout_layout_constraintVertical_bias="0"
            app:ConstraintFrameLayout_measure_constraintWidth_percent="1" />

        <com.mgsoftware.constraintframelayout.helper.widget.Group
            android:id="@+id/g2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:referenceIds="d" />

        <com.mgsoftware.constraintframelayout.helper.widget.Group
            android:id="@+id/g3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ConstraintFrameLayout_layout_constraintVertical_bias="0.75"
            app:referenceIds="e,f" />

        <View
            android:id="@+id/e"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="0.5"
            android:background="@color/red_500"
            app:ConstraintFrameLayout_layout_constraintHorizontal_bias="0" />

        <View
            android:id="@+id/f"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:alpha="0.5"
            android:background="@color/green_500"
            app:ConstraintFrameLayout_layout_constraintHorizontal_bias="0" />

        <com.mgsoftware.constraintframelayout.helper.widget.Group
            android:id="@+id/g4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:ConstraintFrameLayout_layout_constraintVertical_bias="0.9"
            app:referenceIds="g" />

        <View
            android:id="@+id/g"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/red_500"
            app:ConstraintFrameLayout_layout_constraintHorizontal_bias="0.5" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/border"
            app:ConstraintFrameLayout_layout_constraintBottom_toBottomOf="@id/g1"
            app:ConstraintFrameLayout_layout_constraintLeft_toLeftOf="@id/g1"
            app:ConstraintFrameLayout_layout_constraintRight_toRightOf="@id/g1"
            app:ConstraintFrameLayout_layout_constraintTop_toTopOf="@id/g1"
            app:ConstraintFrameLayout_measure_constraintHeight_toHeightOf="@id/g1"
            app:ConstraintFrameLayout_measure_constraintWidth_toWidthOf="@id/g1" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/border"
            app:ConstraintFrameLayout_layout_constraintBottom_toBottomOf="@id/g3"
            app:ConstraintFrameLayout_layout_constraintLeft_toLeftOf="@id/g3"
            app:ConstraintFrameLayout_layout_constraintRight_toRightOf="@id/g3"
            app:ConstraintFrameLayout_layout_constraintTop_toTopOf="@id/g3"
            app:ConstraintFrameLayout_measure_constraintHeight_toHeightOf="@id/g3"
            app:ConstraintFrameLayout_measure_constraintWidth_toWidthOf="@id/g3" />

    </com.mgsoftware.constraintframelayout.widget.ConstraintFrameLayout>

</layout>