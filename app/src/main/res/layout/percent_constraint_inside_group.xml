<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.mgsoftware.constraintframelayout.widget.ConstraintFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mgsoftware.constraintframelayout.helper.widget.Group
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:referenceIds="a,b" />

        <View
            android:id="@+id/a"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/red_500"
            app:ConstraintFrameLayout_layout_constraintHorizontal_bias="0"
            app:ConstraintFrameLayout_layout_constraintVertical_bias="0"
            app:ConstraintFrameLayout_measure_constraintWidth_percent="0.5" />

        <View
            android:id="@+id/b"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:background="@color/green_500"
            app:ConstraintFrameLayout_layout_constraintHorizontal_bias="1"
            app:ConstraintFrameLayout_layout_constraintVertical_bias="0"
            app:ConstraintFrameLayout_measure_constraintHeight_percent="0.75" />

    </com.mgsoftware.constraintframelayout.widget.ConstraintFrameLayout>

</layout>